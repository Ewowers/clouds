<html>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />

    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1'
      crossorigin='anonymous'
    />
    <link
      rel='stylesheet'
      href='https://use.fontawesome.com/releases/v5.15.2/css/all.css'
      integrity='sha384-vSIIfh2YWi9wW0r9iZe7RJPrKwp6bG+s9QZMoITbCckVJqGCCRhc+ccxNcdpHuYu'
      crossorigin='anonymous'
    />
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css'
    />
    <title>{{title}}</title>
    {{#if isProduct}}
      <link rel='stylesheet' href='/admin/product.css' />
    {{/if}}
    {{#if admin}}
      <link rel='stylesheet' href='/admin/home.css' />
    {{/if}}
    {{#if cashier}}
      <link rel='stylesheet' href='/cashier/cashier.css' />
    {{/if}}
  </head>
  <body>
    <script
      src='https://unpkg.com/react@17/umd/react.development.js'
      crossorigin
    ></script>
    <script
      src='https://unpkg.com/react-dom@17/umd/react-dom.development.js'
      crossorigin
    ></script>
    <script src='https://unpkg.com/babel-standalone@6/babel.min.js'></script>
    <script
      src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js'
      integrity='sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW'
      crossorigin='anonymous'
    ></script>

    {{#if admin}}
      <div class='container-fluid'>
        <header class='row bg-dark p-3'>
          <nav class='col'>
            <ul>
              <li>
                <div class='dropdown'>
                  <button
                    class='btn btn-info dropdown-toggle'
                    type='button'
                    id='dropdownMenuButton'
                    data-bs-toggle='dropdown'
                    aria-expanded='false'
                  >
                    Создать документ
                  </button>
                  <ul
                    class='dropdown-menu'
                    aria-labelledby='dropdownMenuButton'
                  >
                    <li data-bs-toggle='modal' data-bs-target='#withdrawn'><a
                        class='dropdown-item'
                        href='#'
                      >Изьять</a></li>
                  </ul>
                </div>
              </li>
              <li>
                <button
                  class='btn btn-warning'
                  data-bs-toggle='modal'
                  data-bs-target='#exampleModal'
                >Cоздать товар</button>
              </li>
            </ul>
          </nav>
          <nav class='col'>
            <ul class='justify-content-end'>
              <li><a href='/cashier' class='btn btn-primary'>Режим кассира</a></li>
              <li data-bs-toggle='modal' data-bs-target='#login'><i
                  class='bi bi-person btn btn-secondary'
                ></i>
              </li>
            </ul>
          </nav>
        </header>
        <div class='row p-3 bg-dark' style='min-height: 100vh;'>
          <div class='col-md-2'>
            <div
              class='nav flex-column nav-pills me-3'
              id='v-pills-tab'
              role='tablist'
              aria-orientation='vertical'
            >
              {{#if isHome}}
                <a class='nav-link active' href='/'>Склад</a>
              {{else}}
                <a class='nav-link' href='/'>Склад</a>
              {{/if}}
              {{#if isFixed}}
                <a
                  class='nav-link active'
                  href='/fixed'
                  role='tab'
                  aria-controls='v-pills-home'
                  aria-selected='true'
                >Изменение товара</a>
              {{else}}
                <a
                  class='nav-link'
                  href='/fixed'
                  role='tab'
                  aria-controls='v-pills-home'
                  aria-selected='true'
                >Изменение товара</a>
              {{/if}}
              {{#if isMoney}}
                <a
                  class='nav-link active'
                  href='/money'
                  role='tab'
                  aria-controls='v-pills-home'
                  aria-selected='true'
                >Движение денег</a>
              {{else}}
                <a
                  class='nav-link'
                  href='/money'
                  role='tab'
                  aria-controls='v-pills-home'
                  aria-selected='true'
                >Движение денег</a>
              {{/if}}
              {{#if isProduct}}
                <a
                  class='nav-link active'
                  href='/product'
                  role='tab'
                  aria-controls='v-pills-settings'
                  aria-selected='false'
                >Движение товара</a>
              {{else}}
                <a
                  class='nav-link'
                  href='/product'
                  role='tab'
                  aria-controls='v-pills-settings'
                  aria-selected='false'
                >Движение товара</a>
              {{/if}}
              {{#if isAdd}}
                <a
                  class='nav-link active'
                  href='/add'
                  role='tab'
                  aria-controls='v-pills-home'
                  aria-selected='true'
                >Савоз</a>
              {{else}}
                <a
                  class='nav-link'
                  href='/add'
                  role='tab'
                  aria-controls='v-pills-home'
                  aria-selected='true'
                >Завоз</a>
              {{/if}}
            </div>
          </div>
          <div class='col-md-10 p-0'>
            {{{body}}}
          </div>
        </div>

        <div
          class='modal fade'
          id='exampleModal'
          tabindex='-1'
          aria-labelledby='exampleModalLabel'
          aria-hidden='true'
        >
          <div class='modal-dialog'>
            <div class='modal-content'>
              <div class='modal-header'>
                <h5 class='modal-title' id='exampleModalLabel'>Создать продукт</h5>
                <button
                  type='button'
                  class='btn-close'
                  data-bs-dismiss='modal'
                  aria-label='Close'
                ></button>
              </div>
              <div class='modal-body'>
                <form name='create'>
                  <div class='mb-3'>
                    <label
                      for='exampleInputEmail1'
                      class='form-label'
                    >Название</label>
                    <input
                      type='text'
                      class='form-control createName'
                      id='exampleInputEmail1'
                      name='name'
                    />
                  </div>
                  <div class='mb-3'>
                    <label
                      for='exampleInputPassword1'
                      class='form-label'
                    >Цена</label>
                    <input
                      type='number'
                      class='form-control createPrise'
                      id='exampleInputPass'
                      name='prise'
                    />
                  </div>
                  <div class='mb-3'>
                    <label
                      for='exampleInputPassword1'
                      class='form-label'
                    >Количество</label>
                    <input
                      type='number'
                      class='form-control createQue'
                      id='exampleInputPassword1'
                      name='que'
                    />
                  </div>
                  <div class='mb-3 form-check p-0'>
                    <label
                      class='form-check-label'
                      for='exampleCheck1'
                    >видимость</label>
                    <select
                      class='form-select createvibility'
                      aria-label='Default select example'
                    >
                      <option selected value='true'>да</option>
                      <option value='false'>нет</option>
                    </select>
                  </div>
                  <div class='mb-3 form-check p-0'>
                    <label
                      class='form-check-label'
                      for='exampleCheck1'
                    >тип</label>
                    <select
                      class='form-select createType'
                      aria-label='Default select example'
                    >
                      <option value='одноразки'>одноразки</option>
                      <option value='девайс'>девайс</option>
                      <option value='жидкость'>жидкость</option>
                      <option value='расходник'>расходник</option>

                    </select>

                  </div>
                </form>
              </div>
              <div class='modal-footer'>
                <button
                  type='button'
                  class='btn btn-secondary'
                  data-bs-dismiss='modal'
                >Отмена</button>
                <button
                  type='button'
                  class='btn btn-primary'
                  onclick='createNewProduct()'
                >Создать</button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div
        class='modal fade'
        id='login'
        tabindex='-1'
        aria-labelledby='exampleModalLabel'
        aria-hidden='true'
      >
        <div class='modal-dialog'>
          <div class='modal-content'>
            <div class='modal-header'>
              <h5 class='modal-title' id='exampleModalLabel'>Авторизация</h5>
              <button
                type='button'
                class='btn-close'
                data-bs-dismiss='modal'
                aria-label='Close'
              ></button>
            </div>
            <div class='modal-body'>
              <div class='mb-3'>
                <label for='exampleInputName' class='form-label'>Логин</label>
                <input
                  disabled
                  type='text'
                  class='form-control'
                  id='exampleInputName'
                  value='{{cookie.name}}'
                />
              </div>
              <div class='mb-3'>
                <label
                  for='exampleInputPassword'
                  class='form-label'
                >Статус</label>
                <input
                  disabled
                  type='text'
                  class='form-control'
                  id='exampleInputPassword'
                  value='{{cookie.status}}'
                />
              </div>
              <button
                class='btn btn-dark d-block'
                style='margin: 0 auto !important;'
              >Выход</button>
            </div>

          </div>
        </div>
      </div>
      
      {{>drop}}
    {{else}}
      {{{body}}}
    {{/if}}
    <script src='https://cdn.jsdelivr.net/npm/vue@2.6.12'></script>
    <style>
      .nav-pills .nav-link{ color: #fff; } .nav-pills .active{ color: #000
      !important; background: #fff !important; }
    </style>
  </body>
</html>